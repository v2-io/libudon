    |c[ \t]     |.space    | ->                        |>> :inline_content
    |c[;]       |.comment  | ->                                |>> :elem_comment_check
    |c[:]       |.attr     | ->                                |>> :inline_attr_key
    |c[<P>]     |.pipe     | ->                                |>> :inline_check_pipe
    |c[!]       |.bang     | ->                                |>> :inline_directive
