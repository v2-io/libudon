    |c[{]         |.deeper   | ->                                |>> :embed_content_nested2
    |default      |.collect  | ->                                |>>

  |state[:embed_content_nested2]
    ; Two levels deep in braces
    |eof                     | emit(Error:unclosed) | emit(EmbeddedEnd) |return
    |c[}]         |.unnest   | ->                                |>> :embed_content_nested
    |c[{]         |.deeper   | ->                                |>> :embed_content_nested3
    |default      |.collect  | ->                                |>>

