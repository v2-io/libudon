    |eof                     | emit(Error:unclosed_comment) | emit(EmbeddedEnd) |return
    |c[}]         |.unnest   | ->                                |>> :embed_inline_comment
    |default      |.collect  | ->                                |>>

  |state[:embed_content_after_comment]
